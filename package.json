{
  "name": "otus",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:DmitriyIvanovIT/react.developer-homework.git",
  "author": "diivanov <diivanov@itmo.ru>",
  "description": "Homework for React.Developer course <https://otus.ru/lessons/react/>",
  "scripts": {
    "dev": "webpack server --mode development --open --hot",
    "build": "webpack --mode production",
    "calc": "ts-node src/calc/index.ts",
    "eslint": "eslint --ext \"**/*.{ts,tsx, js}\"",
    "eslint:fix": "eslint --ext \"**/*.{ts,tsx, js}\" --fix",
    "prettier": "prettier --check \"**/*.{ts,tsx, js}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,tsx, js}\"",
    "loki:update": "yarn build-storybook && loki update --requireReference --reactUri file:./storybook-static",
    "loki:approve": "loki approve",
    "lint": "yarn eslint && yarn prettier",
    "lint:fix": "yarn eslint:fix && yarn prettier:fix",
    "test": "jest --config ./jest.config.js",
    "test:loki": "yarn build-storybook && npx loki --requireReference --reactUri file:./storybook-static",
    "check": "yarn test && yarn lint",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|sass)$": "identity-obj-proxy"
    },
    "modulePaths": [
      "src"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "\\.sass$",
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest/cache"
  },
  "license": "ISC",
  "homepage": "https://github.com/DmitriyIvanovIT/react.developer-homework",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@emotion/jest": "^11.5.0",
    "@storybook/addon-docs": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/addon-storysource": "^6.3.12",
    "@storybook/addons": "^6.3.12",
    "@storybook/builder-webpack5": "^6.3.12",
    "@storybook/manager-webpack5": "^6.3.12",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/enzyme": "^3.10.9",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/react-test-renderer": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-jest": "^27.2.5",
    "babel-loader": "^8.2.2",
    "chromatic": "^6.0.4",
    "core-js": "^3.18.2",
    "enzyme": "^3.11.0",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.26.1",
    "html-webpack-plugin": "^5.4.0",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.5",
    "loki": "^0.28.1",
    "prettier": "^2.4.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "sass-loader": "^12.2.0",
    "storybook-addon-react-docgen": "^1.2.42",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "loki": {
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  }
}
