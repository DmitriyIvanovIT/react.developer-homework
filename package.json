{
  "name": "otus",
  "version": "1.0.0",
  "private": true,
  "repository": "git@github.com:DmitriyIvanovIT/react.developer-homework.git",
  "author": "diivanov <diivanov@itmo.ru>",
  "description": "Homework for React.Developer course <https://otus.ru/lessons/react/>",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "calc": "ts-node src/calc/index.ts",
    "eslint": "eslint --ext \"**/*.{ts,tsx, js}\"",
    "eslint:fix": "eslint --ext \"**/*.{ts,tsx, js}\" --fix",
    "pettirer": "prettier --check \"**/*.{ts,tsx, js}\"",
    "pettirer:fix": "prettier --write \"**/*.{ts,tsx, js}\"",
    "lint": "yarn eslint && yarn pettirer",
    "lint:fix": "yarn eslint:fix && yarn pettirer:fix",
    "test": "jest --config ./jest.config.js",
    "check": "yarn test && yarn lint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn check"
    }
  },
  "jest": {
    "moduleFileExtensions": [
      "ts"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less|sass)$": "identity-obj-proxy"
    },
    "modulePaths": [
      "src"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "\\.sass$",
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest/cache"
  },
  "license": "ISC",
  "homepage": "https://github.com/DmitriyIvanovIT/react.developer-homework",
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "babel-jest": "^27.2.5",
    "babel-loader": "^8.2.2",
    "core-js": "^3.18.2",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "webpack": "^5.58.1",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  }
}
